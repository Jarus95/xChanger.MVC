@using xChanger.MVC.Models.Foundations.Groups;
@model IQueryable<Group>

@{
    ViewData["Title"] = "ShowData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">GroupName</th>
        </tr>
    </thead>
    <tbody>

        @{
            int i = 1;
            foreach (var item in Model) 
            {
        <tr>
        <th scope="row">@i</th>
        <td>@item.GroupName</td>
            <td>
               <a asp-route-groupId="@item.Id" asp-action="EditGroup" class="btn btn-primary">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
            </td>

            <td>
                <a asp-route-id="@item.Id" asp-action="DeleteGroup" class="btn btn-danger" onclick="return DeleteInput()">
                                <i class="fa-solid fa-delete-left"></i>
                            </a>
            </td>
        </tr>
        i++;
       }
    }
    </tbody>
</table>
